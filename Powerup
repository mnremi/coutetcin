class Powerup {
  int pos_x;
  int pos_y;
  float vitesse;
  boolean existe = false;
  PImage image;
  
  Powerup(int init_x, int init_y, float init_vitesse, PImage init_image){
    this.pos_x = init_x;
    this.pos_y = init_y;
    this.vitesse = init_vitesse;
    this.existe = true;
    this.image = init_image;
  }
  
  void affichage(){
    if(existe){
    fill(0,255,0);
    ellipse(pos_x, pos_y, powerup_width, powerup_height);
    }
  }
  
  void deplacement(){
    this.pos_x -= vitesse;
  }
  
  void sortie(){
    if(pos_x < 0 || pos_x > width) destruction();
  }
  
  void destruction(){
    existe = false;
    pos_x = -1;
    pos_y = -1;
  }
  
  int getX(){
    return pos_x;
  }
  
  int getY(){
    return pos_y;
  }
  
  boolean getExiste(){
   return existe; 
  }
  
  PImage getImage(){
   return image; 
  }
}
